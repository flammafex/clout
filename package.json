{
  "name": "clout-social",
  "version": "0.1.4",
  "description": "Uncensorable reputation protocol - P2P content propagation with trust-based filtering",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "clout": "./dist/src/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-static",
    "copy-static": "mkdir -p dist/src/web && mkdir -p dist/src/vendor/hypertoken && cp -r src/web/public dist/src/web/ 2>/dev/null || true && cp -r src/vendor/hypertoken/pkg dist/src/vendor/hypertoken/ 2>/dev/null || true",
    "dev": "tsc --watch",
    "web": "npm run build && node dist/src/web/server.js",
    "web:dev": "tsc && npm run copy-static && node dist/src/web/server.js",
    "test": "npm run test:integration",
    "test:integration": "npm run build && node dist/test/run-integration-tests.js",
    "test:basic": "npm run build && node dist/test/integration/01-basic-transfer.test.js",
    "test:double-spend": "npm run build && node dist/test/integration/02-double-spend.test.js",
    "test:degradation": "npm run build && node dist/test/integration/03-graceful-degradation.test.js",
    "test:phase3": "npm run build && node dist/test/integration/04-phase3-features.test.js",
    "lint": "eslint src/"
  },
  "keywords": [
    "privacy",
    "p2p",
    "social-network",
    "gossip",
    "reputation",
    "uncensorable",
    "web-of-trust"
  ],
  "author": "The Carpocratian Church of Commonality and Equality",
  "license": "Apache-2.0",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@automerge/automerge": "^3.2.1",
    "@noble/ciphers": "^1.3.0",
    "@noble/curves": "^1.9.7",
    "@noble/hashes": "^1.4.0",
    "@roamhq/wrtc": "^0.7.0",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "multiformats": "^13.3.1",
    "socks-proxy-agent": "^8.0.5",
    "wnfs": "^0.2.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.39.2",
    "patch-package": "^8.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
